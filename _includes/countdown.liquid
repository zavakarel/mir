<script>
	const targetDate = new Date( "October 29, 2023 20:00:00" ); 
	const delay = 2000; 

	$( ".countdown" ).countdown( { 
        until: targetDate, 
        layout: 
            "<div class= 'entry days'>{dnn}" +
                "<span class= 'unit'>дни</span>" +
            "</div>" +
            "<div class= 'entry hours'>{hnn}" +
                "<span class= 'unit'>часа</span>" +
            "</div>" +
            "<div class= 'entry minutes'>{mnn}" +
                "<span class= 'unit'>минути</span>" +
            "</div>" +
            "<div class= 'entry seconds'>{snn}" +
                "<span class= 'unit'>секунди</span>" + 
            "</div>", 
        format: "DHMS", 
        timezone: +2
    } ); 

</script> 