<script type= "text/javascript" src= "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script type="text/javascript" src="/assets/plugins/jquery.countdown.package-2.1.0/js/jquery.plugin.min.js"></script> 
